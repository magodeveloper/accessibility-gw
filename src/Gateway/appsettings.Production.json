{
  "AllowedHosts": "*",
  "Gate": {
    "Services": {
      "users": "http://msusers-api:8081",
      "reports": "http://msreports-api:8083", 
      "analysis": "http://msanalysis-api:8082",
      "middleware": "http://accessibility-mw:3001"
    },
    "AllowedRoutes": [
      { "service": "users", "methods": ["POST"], "pathPrefix": "/api/Auth/login", "requiresAuth": false },
      { "service": "users", "methods": ["POST"], "pathPrefix": "/api/Auth/logout", "requiresAuth": false },
      { "service": "users", "methods": ["POST"], "pathPrefix": "/api/Auth/reset-password", "requiresAuth": false },
      { "service": "users", "methods": ["POST"], "pathPrefix": "/api/Auth/confirm-email", "requiresAuth": false },
      { "service": "users", "methods": ["GET"], "pathPrefix": "/api/preferences/by-user", "requiresAuth": false },
      { "service": "users", "methods": ["POST"], "pathPrefix": "/api/preferences", "requiresAuth": false },
      { "service": "users", "methods": ["GET"], "pathPrefix": "/api/sessions/user", "requiresAuth": false },
      { "service": "users", "methods": ["GET"], "pathPrefix": "/api/sessions", "requiresAuth": false },
      { "service": "users", "methods": ["DELETE"], "pathPrefix": "/api/sessions", "requiresAuth": false },
      { "service": "users", "methods": ["PATCH"], "pathPrefix": "/api/users-with-preferences/by-email", "requiresAuth": false },
      { "service": "users", "methods": ["POST"], "pathPrefix": "/api/users-with-preferences", "requiresAuth": false },
      { "service": "users", "methods": ["GET"], "pathPrefix": "/api/users/by-email", "requiresAuth": false },
      { "service": "users", "methods": ["DELETE"], "pathPrefix": "/api/users/by-email", "requiresAuth": false },
      { "service": "users", "methods": ["POST"], "pathPrefix": "/api/users", "requiresAuth": false },
      { "service": "reports", "methods": ["GET"], "pathPrefix": "/api/Report/by-analysis/{analysisId}", "requiresAuth": false },
      { "service": "reports", "methods": ["GET"], "pathPrefix": "/api/Report/by-date/{date}", "requiresAuth": false },
      { "service": "reports", "methods": ["GET"], "pathPrefix": "/api/Report/by-format/{format}", "requiresAuth": false },
      { "service": "reports", "methods": ["GET"], "pathPrefix": "/api/Report", "requiresAuth": false },
      { "service": "reports", "methods": ["POST"], "pathPrefix": "/api/Report", "requiresAuth": false },
      { "service": "reports", "methods": ["GET"], "pathPrefix": "/api/History/by-user/{userId}", "requiresAuth": false },
      { "service": "reports", "methods": ["GET"], "pathPrefix": "/api/History/by-analysis/{analysisId}", "requiresAuth": false },
      { "service": "reports", "methods": ["DELETE"], "pathPrefix": "/api/History/{id}", "requiresAuth": false },
      { "service": "reports", "methods": ["GET"], "pathPrefix": "/api/History", "requiresAuth": false },
      { "service": "reports", "methods": ["POST"], "pathPrefix": "/api/History", "requiresAuth": false },
      { "service": "analysis", "methods": ["GET"], "pathPrefix": "/api/Analysis/by-user", "requiresAuth": false },
      { "service": "analysis", "methods": ["GET"], "pathPrefix": "/api/Analysis/by-date", "requiresAuth": false },
      { "service": "analysis", "methods": ["GET"], "pathPrefix": "/api/Analysis/by-tool", "requiresAuth": false },
      { "service": "analysis", "methods": ["GET"], "pathPrefix": "/api/Analysis/by-status", "requiresAuth": false },
      { "service": "analysis", "methods": ["GET"], "pathPrefix": "/api/Analysis/{id}", "requiresAuth": false },
      { "service": "analysis", "methods": ["GET"], "pathPrefix": "/api/Analysis", "requiresAuth": false },
      { "service": "analysis", "methods": ["POST"], "pathPrefix": "/api/Analysis", "requiresAuth": false },
      { "service": "analysis", "methods": ["GET"], "pathPrefix": "/api/Error/by-result", "requiresAuth": false },
      { "service": "analysis", "methods": ["DELETE"], "pathPrefix": "/api/Error/all", "requiresAuth": false },
      { "service": "analysis", "methods": ["GET"], "pathPrefix": "/api/Error/{id}", "requiresAuth": false },
      { "service": "analysis", "methods": ["DELETE"], "pathPrefix": "/api/Error/{id}", "requiresAuth": false },
      { "service": "analysis", "methods": ["GET"], "pathPrefix": "/api/Error", "requiresAuth": false },
      { "service": "analysis", "methods": ["POST"], "pathPrefix": "/api/Error", "requiresAuth": false },
      { "service": "analysis", "methods": ["GET"], "pathPrefix": "/api/Result/by-level", "requiresAuth": false },
      { "service": "analysis", "methods": ["GET"], "pathPrefix": "/api/Result/by-severity", "requiresAuth": false },
      { "service": "analysis", "methods": ["GET"], "pathPrefix": "/api/Result/by-analysis", "requiresAuth": false },
      { "service": "analysis", "methods": ["DELETE"], "pathPrefix": "/api/Result/all", "requiresAuth": false },
      { "service": "analysis", "methods": ["GET"], "pathPrefix": "/api/Result/{id}", "requiresAuth": false },
      { "service": "analysis", "methods": ["DELETE"], "pathPrefix": "/api/Result/{id}", "requiresAuth": false },
      { "service": "analysis", "methods": ["GET"], "pathPrefix": "/api/Result", "requiresAuth": false },
      { "service": "analysis", "methods": ["POST"], "pathPrefix": "/api/Result", "requiresAuth": false },
      { "service": "middleware", "methods": ["POST"], "pathPrefix": "/api/analyze", "requiresAuth": false },
      { "service": "middleware", "methods": ["GET"], "pathPrefix": "/health", "requiresAuth": false },
      { "service": "middleware", "methods": ["GET"], "pathPrefix": "/metrics", "requiresAuth": false }
    ],
    "DefaultTimeoutSeconds": 30,
    "MaxPayloadSizeBytes": 10485760,
    "EnableCaching": true,
    "CacheExpirationMinutes": 10,
    "EnableMetrics": true,
    "EnableTracing": true
  },
  "Jwt": {
    "Authority": "https://accessibility-auth:8100",
    "Audience": "https://accessibility.company.com",
    "ValidateIssuer": true,
    "ValidateAudience": true,
    "ValidateLifetime": true,
    "ValidateIssuerSigningKey": true
  },
  "HealthChecks": {
    "CheckIntervalSeconds": 30,
    "UnhealthyTimeoutSeconds": 10
  },
  "Redis": {
    "ConnectionString": "redis:6379",
    "Database": 0
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Warning",
      "Override": {
        "Microsoft": "Error",
        "System": "Error",
        "Gateway": "Information"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "./logs/gateway-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  }
}