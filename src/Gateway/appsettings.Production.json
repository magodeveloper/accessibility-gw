{
  "AllowedHosts": "*",
  "Gate": {
    "Services": {
      "users": "http://msusers-api:8081",
      "reports": "http://msreports-api:8083", 
      "analysis": "http://msanalysis-api:8082",
      "middleware": "http://accessibility-mw:3001"
    },
    "AllowedRoutes": [
      { "service": "users", "methods": ["GET","POST","PUT","PATCH","DELETE"], "pathPrefix": "/api/v1/users", "requiresAuth": false },
      { "service": "users", "methods": ["GET","POST","PUT","PATCH","DELETE"], "pathPrefix": "/api/auth", "requiresAuth": false },
      { "service": "reports", "methods": ["GET","POST","PUT","PATCH","DELETE"], "pathPrefix": "/api/Report", "requiresAuth": false },
      { "service": "analysis", "methods": ["GET","POST","PUT","PATCH","DELETE"], "pathPrefix": "/api/Analysis", "requiresAuth": false },
      { "service": "middleware", "methods": ["GET","POST","PUT","PATCH","DELETE"], "pathPrefix": "/api/analyze", "requiresAuth": false },
      { "service": "middleware", "methods": ["GET"], "pathPrefix": "/health", "requiresAuth": false },
      { "service": "middleware", "methods": ["GET"], "pathPrefix": "/metrics", "requiresAuth": false }
    ],
    "DefaultTimeoutSeconds": 30,
    "MaxPayloadSizeBytes": 10485760,
    "EnableCaching": true,
    "CacheExpirationMinutes": 10,
    "EnableMetrics": true,
    "EnableTracing": true
  },
  "Jwt": {
    "Authority": "https://accessibility-auth:8100",
    "Audience": "accessibility-gateway",
    "ValidateIssuer": true,
    "ValidateAudience": true,
    "ValidateLifetime": true,
    "ValidateIssuerSigningKey": true
  },
  "HealthChecks": {
    "CheckIntervalSeconds": 30,
    "UnhealthyTimeoutSeconds": 10
  },
  "Redis": {
    "ConnectionString": "redis:6379",
    "Database": 0
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Warning",
      "Override": {
        "Microsoft": "Error",
        "System": "Error",
        "Gateway": "Information"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "./logs/gateway-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  }
}