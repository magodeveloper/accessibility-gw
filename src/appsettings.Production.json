{
  "AllowedHosts": "*",
  "Gate": {
    "Services": {
      "users": "http://accessibility-ms-users:8080",
      "reports": "http://accessibility-ms-reports:8081", 
      "analysis": "http://accessibility-ms-analysis:8082",
      "middleware": "http://accessibility-mw:3000"
    },
    "AllowedRoutes": [
      { "service": "users", "methods": ["GET","POST","PUT","PATCH","DELETE"], "pathPrefix": "/api/users" },
      { "service": "users", "methods": ["GET","POST","PUT","PATCH","DELETE"], "pathPrefix": "/api/auth" },
      { "service": "reports", "methods": ["GET","POST","PUT","PATCH","DELETE"], "pathPrefix": "/api/reports" },
      { "service": "analysis", "methods": ["GET","POST","PUT","PATCH","DELETE"], "pathPrefix": "/api/analysis" },
      { "service": "middleware", "methods": ["GET","POST","PUT","PATCH","DELETE"], "pathPrefix": "/api/accessibility" }
    ],
    "DefaultTimeoutSeconds": 30,
    "MaxPayloadSizeBytes": 10485760,
    "EnableCaching": true,
    "CacheExpirationMinutes": 5,
    "EnableMetrics": true,
    "EnableTracing": true
  },
  "Jwt": {
    "Authority": "https://accessibility-auth:5001",
    "Audience": "accessibility-gateway",
    "ValidateIssuer": true,
    "ValidateAudience": true,
    "ValidateLifetime": true,
    "ValidateIssuerSigningKey": true
  },
  "HealthChecks": {
    "CheckIntervalSeconds": 30,
    "UnhealthyTimeoutSeconds": 10
  },
  "Redis": {
    "ConnectionString": "redis:6379",
    "Database": 0
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "./logs/gateway-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  }
}
