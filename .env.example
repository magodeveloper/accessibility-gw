# ===============================================
# Accessibility Gateway - Environment Variables
# ===============================================

# ===== APLICACIÓN =====
ASPNETCORE_ENVIRONMENT=Development
ASPNETCORE_URLS=http://+:8080
DOTNET_RUNNING_IN_CONTAINER=true
DOTNET_USE_POLLING_FILE_WATCHER=true

# ===== SERVICIOS INTERNOS =====
Gate__Services__users=http://msusers-api:8081
Gate__Services__reports=http://msreports-api:8083
Gate__Services__analysis=http://msanalysis-api:8082
Gate__Services__middleware=http://accessibility-mw:3001

# ===== REDIS CACHE =====
Redis__ConnectionString=redis:6379

# ===== AUTENTICACIÓN JWT =====
Jwt__Authority=https://localhost:8084
Jwt__Audience=accessibility-gateway
Jwt__ValidIssuer=https://localhost:8084
Jwt__ValidAudience=accessibility-gateway

# ===== CONFIGURACIÓN GATEWAY =====
Gate__DefaultTimeoutSeconds=30
Gate__MaxPayloadSizeBytes=10485760
Gate__EnableDetailedErrors=true
Gate__AllowedHosts=*

# ===== LOGGING =====
Logging__LogLevel__Default=Information
Logging__LogLevel__Microsoft=Warning
Logging__LogLevel__System=Warning
Logging__LogLevel__Gateway=Debug

# ===== HEALTH CHECKS =====
HealthChecks__UI__PollingIntervalSeconds=10
HealthChecks__UI__EvaluationTimeOnSeconds=10

# ===== RATE LIMITING =====
RateLimit__GlobalMaxRequests=1000
RateLimit__PerUserMaxRequests=100
RateLimit__WindowMinutes=1

# ===== CORS =====
Cors__AllowedOrigins=http://localhost:3000,http://localhost:8100
Cors__AllowedMethods=GET,POST,PUT,DELETE,OPTIONS
Cors__AllowedHeaders=Content-Type,Authorization

# ===== TIMEOUTS =====
HttpClient__DefaultTimeoutSeconds=30
HttpClient__RetryCount=3
HttpClient__CircuitBreakerFailureThreshold=5
